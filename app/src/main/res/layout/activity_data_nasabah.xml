<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightBlue"
    tools:context=".DataNasabahActivity">

    <Button
        android:id="@+id/btn_home_data"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/home"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="@string/data_nasabah"
        android:textColor="@color/maps_floorpicker_black"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/tv_cif"
        android:layout_marginTop="30dp"
        android:layout_below="@id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cif_nasabah"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/tv_nama"
        android:layout_below="@id/tv_cif"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nama_nasabah"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tv_ttl"
        android:layout_below="@id/tv_nama"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tempat_tanggal_lahir"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tv_ktp"
        android:layout_below="@id/tv_ttl"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ktp"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tv_ibu_kandung"
        android:layout_below="@id/tv_ktp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nama_ibu_kandung"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tv_alamat"
        android:layout_below="@id/tv_ibu_kandung"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alamat"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tv_nomor"
        android:layout_below="@id/tv_alamat"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nomor"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/btn_setoran"
        android:layout_marginTop="25dp"
        android:layout_below="@id/tv_nomor"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Memasukkan Laporan"
        android:textSize="18sp"
        android:textColor="@color/gmm_white"
        android:background="@drawable/rounded_button"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_bar_data"
        android:layout_centerInParent="true" />

</RelativeLayout>